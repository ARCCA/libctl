# Variables substituted by the autoconf configure script:

SHELL = @SHELL@

CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@ -I../base -I.
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
RANLIB = @RANLIB@
@SET_MAKE@
INSTALL = @INSTALL@
prefix = @prefix@

AR = ar

all: libs

libs:
	chmod u+x gen-ctl-io

install:
	$(INSTALL) -d $(prefix)/include
	$(INSTALL) -m 0644 ctlgeom.h $(prefix)/include
	$(INSTALL) -d $(prefix)/share/libctl/utils
	$(INSTALL) -m 0644 geom.c $(prefix)/share/libctl/utils
	$(INSTALL) -m 0644 geom.scm $(prefix)/share/libctl/utils
	$(INSTALL) -m 0644 ctl-io.scm $(prefix)/share/libctl/utils
	$(INSTALL) -d $(prefix)/bin
	$(INSTALL) -m 0755 gen-ctl-io $(prefix)/bin
	$(INSTALL) -d $(prefix)/man/man1
	$(INSTALL) -m 0644 gen-ctl-io.1 $(prefix)/man/man1

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $< -o $@

clean: 
